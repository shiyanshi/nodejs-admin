                <li><a href="">Nav item again</a></li>
                <li><a href="">One more nav</a></li>
                <li><a href="">Another nav item</a></li>
            </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <section class="edit">
                <form action="/patient/edit" method="post">
                    <div class="panel panel-default">
                        <!-- Default panel contents -->
                        <div class="panel-heading">
                            <h1 class="panel-title">Edit Patient Information</h1>
                        </div>

                        {{# if message.length }}
                            <div class="alert alert-success alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <strong>Update!</strong> {{ message }}
                            </div>
                        {{/if}}

                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>Patient Name</td>
                                <td>
                                    <input type="text" class="form-control" id="PatientName" name="PatientName" value="{{patient.PatientName}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Custom Membership ID</td>
                                <td>
                                    <input type="text" class="form-control" id="CustomMembershipID" name="CustomMembershipID" value="{{patient.CustomMembershipID}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Custom Barcode</td>
                                <td>
                                    <input type="text" class="form-control" id="CustomBarcode" name="CustomBarcode" value="{{patient.CustomBarcode}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Registry Number</td>
                                <td>
                                    <input type="text" class="form-control" id="RegistryNumber" name="RegistryNumber" value="{{patient.RegistryNumber}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Caregiver Name</td>
                                <td>
                                    <input type="text" class="form-control" id="CaregiverName" name="CaregiverName" value="{{patient.CaregiverName}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Physician</td>
                                <td>
                                    <input type="text" class="form-control" id="Physician" name="Physician" value="{{patient.Physician}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Card Exp. Date</td>
                                <td>
                                    <input type="text" class="form-control" id="CardExpDate" name="CardExpDate" value="{{patient.CardExpDate}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Birthday</td>
                                <td>
                                    <input type="text" class="form-control" id="Birthday" name="Birthday" value="{{patient.Birthday}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Street Address</td>
                                <td>
                                    <input type="text" class="form-control" id="StreetAddress" name="StreetAddress" value="{{patient.StreetAddress}}">
                                </td>
                            </tr>
                            <tr>
                                <td>City</td>
                                <td>
                                    <input type="text" class="form-control" id="City" name="City" value="{{patient.City}}">
                                </td>
                            </tr>
                            <tr>
                                <td>State</td>
                                <td>
                                    <input type="text" class="form-control" id="State" name="State" value="{{patient.State}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Zip code</td>
                                <td>
                                    <input type="text" class="form-control" id="Zipcode" name="Zipcode" value="{{patient.Zipcode}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Resident</td>
                                <td>
                                    <input type="text" class="form-control" id="Resident" name="Resident" value="{{patient.Resident}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Phone Number</td>
                                <td>
                                    <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="{{patient.PhoneNumber}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Phone Carrier</td>
                                <td>
                                    <input type="text" class="form-control" id="PhoneCarrier" name="PhoneCarrier" value="{{patient.PhoneCarrier}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>
                                    <input type="text" class="form-control" id="Email" name="Email" value="{{patient.Email}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Joined At</td>
                                <td>
                                    <input type="text" class="form-control" id="JoinedAt" name="JoinedAt" value="{{patient.JoinedAt}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Drivers License Number</td>
                                <td>
                                    <input type="text" class="form-control" id="DriversLicenseNumber" name="DriversLicenseNumber" value="{{patient.DriversLicenseNumber}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Last Visit Date</td>
                                <td>
                                    <input type="text" class="form-control" id="LastVisitDate" name="LastVisitDate" value="{{patient.LastVisitDate}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Referrer</td>
                                <td>
                                    <input type="text" class="form-control" id="Referrer" name="Referrer" value="{{patient.Referrer}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Last Visit Purchases</td>
                                <td>
                                    <input type="text" class="form-control" id="LastVisitPurchases" name="LastVisitPurchases" value="{{patient.LastVisitPurchases}}">
                                </td>
                            </tr>
                            <tr>
                                <td>Total</td>
                                <td>
                                    <input type="text" class="form-control" id="Total" name="Total" value="{{patient.Total}}">
                                </td>
                            </tr>
                            </tbody>
                        </table>
                        <input type="hidden" id="id" name="id" value="{{patient._id}}">
                        <div class="col-md-4 col-md-offset-9">
                            <div class="btn-group" role="group" aria-label="...">
                                <button type="submit" class="btn btn-success">Save</button>
                                <a href="/patients" type="button" class="btn btn-warning">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


