                <li><a href="">Nav item again</a></li>
                <li><a href="">One more nav</a></li>
                <li><a href="">Another nav item</a></li>
                <li><a href="">More navigation</a></li>
            </ul>
            <ul class="nav nav-sidebar">
                <li><a href="">Nav item again</a></li>
                <li><a href="">One more nav</a></li>
                <li><a href="">Another nav item</a></li>
            </ul>
        </div>


        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <section class="get">

                {{# if message.length }}
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Update!</strong> {{ message }}
                    </div>
                {{/if}}

                <div class="panel panel-default">
                    <!-- Default panel contents -->
                    <div class="panel-heading">
                        <h1 class="panel-title">Product Information</h1>
                    </div>

                    <div class="col-md-4 col-md-offset-8">
                        <a href="/product/edit/{{product._id}}" type="button" class="btn btn-warning">Edit Product</a>
                        <a href="/product/delete/{{product._id}}" type="button" class="btn btn-danger">Delete Product</a>
                    </div>

                    <td>
                        <div class="col-md-1">
                            <img src="{{ product.imagelink }}" alt="" height="45" width="45">
                        </div>
                    </td>

                    <table class="table table-striped" style="table-layout: fixed; width: 150%">
                        <thead>
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Product ID</td>
                                <td>{{ product.id }}</td>
                            </tr>
                            <tr>
                                <td>Product Name</td>
                                <td style="word-wrap: break-word">{{ product.name }}</td>
                            </tr>
                            <tr>
                                <td>Description</td>
                                <td style="word-wrap: break-word">{{ product.description }}</td>
                            </tr>
                            <tr>
                                <td>Category</td>
                                <td>{{ product.category }}</td>
                            </tr>
                            <tr>
                                <td>Vendor</td>
                                <td>{{ product.vendor }}</td>
                            </tr>
                            <tr>
                                <td>Image Link</td>
                                <td style="word-wrap: break-word">{{ product.imagelink }}</td>
                            </tr>
                            <tr>
                                <td>Quantity</td>
                                <td>
                                    {{ product.quantity_oz }} oz
                                </td>
                            </tr>
                            <tr>
                                <td>Last Modified</td>
                                <td>{{ product.last_modified }}</td>
                            </tr>
                            <tr>
                                <td>Created at</td>
                                <td>{{ product.created }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <section class="add to cart">
                        <form action="/cart/insert" method="post">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Price 1/8 oz</td>
                                        <td>
                                            $ {{ product.price_eighth_oz }}
                                        </td>
                                        <td>
                                            <input type="number" class="form-control" id="quantity_eighth_oz" name="quantity_eighth_oz">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Price 1/4 oz</td>
                                        <td>
                                            $ {{ product.price_quarter_oz }}
                                        </td>
                                        <td>
                                            <input type="number" class="form-control" id="quantity_quarter_oz" name="quantity_quarter_oz">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Price 1/2 oz</td>
                                        <td>
                                            $ {{ product.price_half_oz }}
                                        </td>
                                        <td>
                                            <input type="number" class="form-control" id="quantity_half_oz" name="quantity_half_oz">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Price 1 oz</td>
                                        <td>
                                            $ {{ product.price_one_oz }}
                                        </td>
                                        <td>
                                            <input type="number" class="form-control" id="quantity_one_oz" name="quantity_one_oz">
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <input type="hidden" value="{{product._id}}" name="id" />
                            <div class="col-md-4 col-md-offset-9">
                                <div class="btn-group" role="group" aria-label="...">
                                    <button type="submit" class="btn btn-success">Add to Cart</button>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </section>
        </div>
    </div>
</div>


